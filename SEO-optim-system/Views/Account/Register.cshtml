@{
    ViewData["Title"] = "Страница регистрации";
    ViewData["Description"] = "Регистрация в информационную систему для SEO-анализа сайтов";
}
@model SEO_optim_system.ViewModel.RegisterModel

<h2 class="mt-3">Регистрация</h2>

<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true" class=" border border-light p-3 col-md-6  mt-3 mb-5">
    <div class="validation" asp-validation-summary="ModelOnly" />
    <div>
        <div class="mb-4 ">
            <div class="mb-2">
                <label>Фамилия*</label>
                <input type="text" class="form-control" placeholder="Фамилия" asp-for="SecondName">
            </div>
            <div class="mb-2">
                <label>Имя*</label>
                <input type="text" class="form-control" placeholder="Имя" asp-for="FirstName">
            </div>
            <div class="mb-2">
                <label>Отчество*</label>
                <input type="text" class="form-control" placeholder="Отчество" asp-for="Patronymic">
            </div>
            <div class="mb-2">
                <label>Должность*</label>
                <input type="text" class="form-control" placeholder="Должность" asp-for="Position">
            </div>
            <div class="mb-2">
                <label for="InputEmployeeDepartament">Отдел*</label>
                <select class="custom-select" id="InputEmployeeDepartment">
                    <option value="0">Администрация</option>
                    <option value="1">Бухгалтерия</option>
                    <option value="2">Разработка</option>
                    <option value="3">Отдел маркетинга</option>
                </select>
            </div>
            <div class="mb-2">
                <label>Номер телефона</label>
                <input type="text" class="form-control" placeholder="Номер телефона" asp-for="PhoneNumber">
            </div>
            <div class="mb-2">
                <label>Опыт работы, лет</label>
                <input type="text" class="form-control" placeholder="Опыт работы" asp-for="Experience">
            </div>
            <div class="mb-2">
                <label>Дата рождения</label>
                <input type="date" class="form-control" placeholder="Дата рождения" asp-for="Birthday">
            </div>
        </div>
        <div>
            <label asp-for="Email">Введите Email</label><br />
            <input type="text" class="form-control" asp-for="Email" />
            <span asp-validation-for="Email" />
        </div>
        <div>
            <label asp-for="Password">Введите пароль</label><br />
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" />
        </div>
        <div>
            <label asp-for="ConfirmPassword">Повторите пароль</label><br />
            <input asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" />
        </div>
        <div class="mt-3 mb-3">
            <input type="submit" class="btn btn-primary" value="Регистрация" />
        </div>
    </div>
    <p>
        Поля, отмеченные * являются обязательными к заполнению
    </p>
    <p>
        Регистрируясь вы соглашаетесь
        <a href="" target="_blank">с условием обслуживания</a>
    </p>
</form>