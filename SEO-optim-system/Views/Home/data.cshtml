@{
    ViewData["Title"] = "Данные";
    ViewData["Description"] = "Страница для ввода данных в базу данных и вывода";
}
<main role="main" class="col-md-11 ml-sm-auto col-lg-11 px-4">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Данные</h1>
    </div>

    <div class="container">
        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="Contract-tab" data-toggle="tab" href="#Contract" role="tab" aria-controls="Contract" aria-selected="true">Договора</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="ListOfCompany-tab" data-toggle="tab" href="#ListOfCompany" role="tab" aria-controls="ListOfCompany" aria-selected="false">Список компаний</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="ListOfEmployee-tab" data-toggle="tab" href="#ListOfEmployee" role="tab" aria-controls="ListOfEmployee" aria-selected="false">Список рабочих</a>
            </li>
        </ul>
        <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="Contract" role="tabpanel" aria-labelledby="Contract-tab">
                <form id="ContractValidate">
                    <div class="row mt-2">
                        <div class="form-group col-md-6">
                            <label for="InputProjectName">Название проекта</label>
                            <input type="text" class="form-control" id="InputProjectName" placeholder="Название проекта" name="NameProject">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="InputProjectDate">Дата заключения договора</label>
                            <input type="date" class="form-control" id="InputProjectDate" placeholder="Дата">
                        </div>
                    </div>
                    <div class="row mt-1">
                        <div class="form-group col-md-6">
                            <label for="InputProjectSite">Сайт для продвижения</label>
                            <input type="text" class="form-control" id="InputProjectSite" placeholder="Сайт" name="SiteProject">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="CompanySelect">Выберите компанию</label>
                            <select class="form-control" id="CompanySelect">
                                @foreach (var temp in ViewBag.Companies)
                                {
                                    <option value="@temp.Id">@temp.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="row mt-1">
                        <div class="form-group col-md-4">
                            <label for="EmployeeSelect">Выберите рабочего</label>
                            <select class="form-control" id="EmployeeSelect">
                                @foreach (var temp in ViewBag.Employees)
                                {
                                    <option value="@temp.Id">@temp.FirstName @temp.SecondName</option>
                                }
                            </select>
                        </div>
                        <div class="form-group col-md-4">
                            <label for="InputGooglePoz">Позиция в Google</label>
                            <input type="text" class="form-control" id="InputGooglePoz" placeholder="Позиция в Google" name="GooglePozValid">
                        </div>
                        <div class="form-group col-md-4">
                            <label for="InputYandexPoz">Позиция в Yandex</label>
                            <input type="text" class="form-control" id="InputYeandexPoz" placeholder="Позиция в Yandex" name="YandexPozValid">
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="TextareaKeywords">Ключевые слова</label>
                        <textarea class="form-control" id="TextareaKeywords" placeholder="Слова вводить через запятую" name="ProjectKeywords"></textarea>
                    </div>
                    <div class="row m-2">
                        <div class="custom-control custom-checkbox col-md-4">
                            <input class="custom-control-input" type="checkbox" id="OptimizImg">
                            <label class="custom-control-label" for="OptimizImg">Оптимизация изображений</label>
                        </div>
                        <div class="custom-control custom-checkbox col-md-4">
                            <input class="custom-control-input" type="checkbox" id="OptimizText">
                            <label class="custom-control-label" for="OptimizText">Оптимизация текста</label>
                        </div>
                        <div class="custom-control custom-checkbox col-md-4">
                            <input class="custom-control-input" type="checkbox" id="OptimizTag">
                            <label class="custom-control-label" for="OptimizTag">Оптимизация тэгов</label>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary btn-lg btn-block" id="AddContract" value="submit">Добавить договор</button>
                </form>
                <br>
                <div class="btn-group pb-3">
                    <div class="dropdown pr-3">
                        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Изменить
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            @foreach (var item in (List<Contract>)ViewBag.Contracts)
                            {
                                <a class="dropdown-item" onclick="GetContractById(@item.Id)">@item.Name - @item.Company.Name</a>
                            }
                        </div>
                    </div>
                    <div class="dropdown" style="text-align: right;">
                        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Экспорт
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <a class="dropdown-item" onclick="ToExcelContract('xlsx')">Excel</a>
                            <a class="dropdown-item" onclick="ToHTMLContract('html')">HTML</a>
                        </div>
                    </div>
                </div>

                <table id="data-table-contracts" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
                    <thead>
                        <tr style="background-color: rgba(156, 156, 156, 0.75); vertical-align:middle; text-align:center" class="align-middle">
                            <th rowspan="2">Название</th>
                            <th rowspan="2">Дата</th>
                            <th rowspan="2">Cайт</th>
                            <th rowspan="2">Компания</th>
                            <th rowspan="2">Выполняет</th>
                            <th rowspan="2">Google</th>
                            <th rowspan="2">Yandex</th>
                            <th colspan="3">Оптимизация</th>
                        </tr>
                        <tr style="background-color: rgba(156, 156, 156, 0.75)">
                            <td><b>Изображения</b></td>
                            <td><b>Текст</b></td>
                            <td><b>Тэги</b></td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in (List<Contract>)ViewBag.Contracts)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Date.Date.ToShortDateString()</td>
                                <td><a href="https://@item.Url">@item.Url</a></td>
                                <td>@item.Company.Name</td>
                                <td>@item.Employee.FirstName @item.Employee.SecondName</td>
                                <td>@item.GooglePoz</td>
                                <td>@item.YandexPoz</td>
                                <td>@(@item.OptimImg == true ? "Да" : "Нет")</td>
                                <td>@(@item.OptimText == true ? "Да" : "Нет")</td>
                                <td>@(@item.OptimTag == true ? "Да" : "Нет")</td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
            <div class="tab-pane fade" id="ListOfCompany" role="tabpanel" aria-labelledby="ListOfCompany-tab">
                <form id="CompanyValidate">
                    <div class="row mt-2">
                        <div class="form-group col-md-4">
                            <label for="InputCompanyName">Название компании</label>
                            <input type="text" class="form-control" id="InputCompanyName" placeholder="Название компании" name="CompanyName">
                        </div>
                        <div class="form-group col-md-4">
                            <label for="InputCompanyCountry">Страна</label>
                            <input type="text" class="form-control" id="InputCompanyCountry" placeholder="Страна" name="CompanyCountry">
                        </div>
                        <div class="form-group col-md-4">
                            <label for="InputCompanyCity">Город</label>
                            <input type="text" class="form-control" id="InputCompanyCity" placeholder="Город" name="CompanyCity">
                        </div>
                    </div>
                    <div class="row mt-1">
                        <div class="form-group col-md-6">
                            <label for="InputCompanyDirector">ФИО директора или ответственного лица</label>
                            <input type="text" class="form-control" id="InputCompanyDirector" placeholder="ФИО директора или ответственного лица" name="CompanyDirector">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="InputCompanyPhone">Номер телефона</label>
                            <input type="text" class="form-control phoneNumber" id="InputCompanyPhone" name="CompanyPhone" placeholder="Номер телефона">
                        </div>
                    </div>
                    <button class="btn btn-primary btn-lg btn-block" id="AddCompany" type="submit" value="submit">Добавить компанию</button>
                </form>
                <br>
                <div class="btn-group pb-3">
                    <div class="dropdown pr-2">
                        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Изменить</button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            @foreach (var item in (List<Company>)ViewBag.Companies)
                            {
                                <a class="dropdown-item" onclick="GetCompanyById(@item.Id)">@item.Name</a>
                            }
                        </div>
                    </div>
                    <div class="dropdown" style="text-align: right;">
                        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Экспорт
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <a class="dropdown-item" onclick="ToExcelCompany('xlsx')">Excel</a>
                            <a class="dropdown-item" onclick="ToHTMLCompany('html')">HTML</a>
                        </div>
                    </div>
                </div>
                <table id="data-table-companies" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th class="th-sm">
                                Название компании
                            </th>
                            <th class="th-sm">
                                Страна
                            </th>
                            <th class="th-sm">
                                Город
                            </th>
                            <th class="th-sm">
                                ФИО
                            </th>
                            <th class="th-sm">
                                Номер телефона
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in (List<Company>)ViewBag.Companies)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Country</td>
                                <td>@item.City</td>
                                <td>@item.LPR</td>
                                <td>@item.PhoneNumber</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="tab-pane fade" id="ListOfEmployee" role="tabpanel" aria-labelledby="ListOfEmployee-tab">
                <form id="EmployeeValidate">
                    <div class="row mt-2">
                        <div class="form-group col-md-4">
                            <label for="InputEmployeeFirstName">Имя рабочего</label>
                            <input type="text" class="form-control" id="InputEmployeeFirstName" placeholder="Имя" name="EmployeeName">
                        </div>
                        <div class="form-group col-md-4">
                            <label for="InputEmployeePatronymic">Отчество рабочего</label>
                            <input type="text" class="form-control" id="InputEmployeePatronymic" placeholder="Отчество" name="EmployeePatronymic">
                        </div>
                        <div class="form-group col-md-4">
                            <label for="InputEmployeeSecondName">Фамилия рабочего</label>
                            <input type="text" class="form-control" id="InputEmployeeSecondName" placeholder="Фамилия" name="EmployeeSecondName">
                        </div>
                    </div>
                    <div class="row mt-1">
                        <div class="form-group col-md-6">
                            <label for="InputEmployeePosition">Должность</label>
                            <input type="text" class="form-control" id="InputEmployeePosition" placeholder="Должность" name="EmployeePosition">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="InputEmployeeDepartament">Отдел</label>
                            <select class="custom-select" id="InputEmployeeDepartment">
                                <option value="0">Администрация</option>
                                <option value="1">Бухгалтерия</option>
                                <option value="2">Разработка</option>
                                <option value="3">Отдел маркетинга</option>
                            </select>
                        </div>
                    </div>
                    <div class="row mt-1">
                        <div class="form-group col-md-4">
                            <label for="InputEmployeeBirthday">Дата рождения</label>
                            <input type="date" class="form-control" id="InputEmployeeBirthday" placeholder="Дата рождения">
                        </div>
                        <div class="form-group col-md-4">
                            <label for="InputEmployeePhone">Номер телефона</label>
                            <input type="text" class="form-control phoneNumber" id="InputEmployeePhone" name="EmployeePhone" placeholder="Номер телефона">
                        </div>
                        <div class="form-group col-md-4">
                            <label for="InputEmployeeExperience">Стаж, лет</label>
                            <input type="text" class="form-control" id="InputEmployeeExperience" placeholder="Лет" name="EmployeeExperience">
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary btn-lg btn-block" value="submit" id="AddEmployee">Добавить рабочего</button>
                </form>
                <br>
                <div class="btn-group pb-3">
                    <div class="dropdown pr-2">
                        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Изменить</button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            @foreach (var item in (List<Employee>)ViewBag.Employees)
                            {
                                <a class="dropdown-item" onclick="GetEmployeeById(@item.Id)">@item.FirstName @item.Patronymic @item.SecondName</a>
                            }
                        </div>
                    </div>
                    <div class="dropdown">
                        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Экспорт</button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <a class="dropdown-item" onclick="ToExcelEmployee('xlsx')">Excel</a>
                            <a class="dropdown-item" onclick="ToHTMLEmployee('html')">HTML</a>
                        </div>
                    </div>
                </div>

                <table id="data-table-employees" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th class="th-sm">
                                ФИО
                            </th>
                            <th class="th-sm">
                                Дата рождения
                            </th>
                            <th class="th-sm">
                                Должность
                            </th>
                            <th class="th-sm">
                                Отдел
                            </th>
                            <th class="th-sm">
                                Номер телефона
                            </th>
                            <th class="th-sm">
                                Стаж
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in (List<Employee>)ViewBag.Employees)
                        {
                            <tr>
                                <td>@item.FirstName @item.Patronymic @item.SecondName</td>
                                <td>@item.Birthday.Date.ToShortDateString()</td>
                                <td>@item.Position</td>
                                <td>@item.Department</td>
                                <td>@item.PhoneNumber</td>
                                <td>@item.Experience</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="modal" tabindex="-1" role="dialog" id="EmployeesModal">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="FullName"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="row mt-2">
                            <div class="form-group col-md-6">
                                <label for="EmployeeId" class="form-control-label">Id:</label>
                                <input type="text" class="form-control" id="EmployeeId" readonly>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="EmployeeEmail" class="form-control-label">Email:</label>
                                <input type="text" class="form-control" id="EmployeeEmail" readonly>
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="form-group col-md-6">
                                <label for="EditEmployeeFirstName" class="form-control-label">Имя:</label>
                                <input type="text" class="form-control" id="EditEmployeeFirstName">
