@{
    ViewData["Title"] = "Данные";
    ViewData["Description"] = "Страница для ввода данных в базу данных и вывода";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Данные</h1>
</div>

<div class="container">
    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" id="Contract-tab" data-toggle="tab" href="#Contract" role="tab" aria-controls="Contract" aria-selected="true">Договора</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="ListOfCompany-tab" data-toggle="tab" href="#ListOfCompany" role="tab" aria-controls="ListOfCompany" aria-selected="false">Список компаний</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="ListOfEmployee-tab" data-toggle="tab" href="#ListOfEmployee" role="tab" aria-controls="ListOfEmployee" aria-selected="false">Список рабочих</a>
        </li>
    </ul>
    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="Contract" role="tabpanel" aria-labelledby="Contract-tab">
            <div class="form-group pt-3">
                <label for="InputProjectName">Название проекта</label>
                <input type="text" class="form-control" id="InputProjectName" placeholder="Название проекта">
            </div>
            <div class="form-group">
                <label for="InputProjectDate">Дата заключения договора</label>
                <input type="date" class="form-control" id="InputProjectDate" placeholder="Дата">
            </div>
            <div class="form-group">
                <label for="InputProjectSite">Сайт для продвижения</label>
                <input type="text" class="form-control" id="InputProjectSite" placeholder="Сайт">
            </div>
            <div class="form-group">
                <label for="CompanySelect">Выберите компанию</label>
                <select class="form-control" id="CompanySelect">
                    @foreach (var temp in ViewBag.Companies)
                    {
                        <option value="@temp.Id">@temp.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label for="EmployeeSelect">Выберите рабочего</label>
                <select class="form-control" id="EmployeeSelect">
                    @foreach (var temp in ViewBag.Employees)
                    {
                        <option value="@temp.Id">@temp.FirstName @temp.SecondName</option>
                    }
                </select>
            </div>
            <div class="mb-3">
                <label for="TextareaKeywords">Ключевые слова</label>
                <textarea class="form-control" id="TextareaKeywords" placeholder="Слова вводить через запятую"></textarea>
            </div>
            <div class="form-group">
                <label for="InputGooglePoz">Позиция в Google</label>
                <input type="text" class="form-control" id="InputGooglePoz" placeholder="Позиция в Google">
            </div>
            <div class="form-group">
                <label for="InputYandexPoz">Позиция в Yandex</label>
                <input type="text" class="form-control" id="InputYeandexPoz" placeholder="Позиция в Yandex">
            </div>
