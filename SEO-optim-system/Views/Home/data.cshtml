                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" onclick='DeleteCompany(document.getElementById("CompanyId").value)'>Удалить</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Закрыть</button>
                    <button type="button" class="btn btn-primary" onclick="UpdateCompanyModal()">Сохранить</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal" tabindex="-1" role="dialog" id="ContractsModal">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="NameContractModal" style="overflow: hidden; white-space: nowrap;"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="row mt-2">
                            <div class="form-group col-md-6">
                                <label for="ContractId" class="form-control-label">Id:</label>
                                <input type="text" class="form-control" id="ContractId" readonly>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="EditCompanyDate" class="form-control-label">Дата:</label>
                                <input type="text" class="form-control" id="EditCompanyDate" readonly>
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="form-group col-md-6">
                                <label for="EditContractName" class="form-control-label">Название проекта:</label>
                                <input type="text" class="form-control" id="EditContractName">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="EditCompanySite" class="form-control-label">Сайт:</label>
                                <input type="text" class="form-control" id="EditCompanySite">
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="form-group col-md-6">
                                <label for="EditCompanySelect">Выберите компанию</label>
                                <select class="form-control" id="EditCompanySelect">
                                    @foreach (var temp in ViewBag.Companies)
                                    {
                                        <option value="@temp.Id">@temp.Name</option>
                                    }
                                </select>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="EditEmployeeSelect">Выберите рабочего</label>
                                <select class="form-control" id="EditEmployeeSelect">
                                    @foreach (var temp in ViewBag.Employees)
                                    {
                                        <option value="@temp.Id">@temp.FirstName @temp.SecondName - @temp.Position</option>
