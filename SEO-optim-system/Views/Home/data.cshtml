                <input class="custom-control-input" type="checkbox" id="OptimizImg">
                <label class="custom-control-label" for="OptimizImg">Оптимизация изображений</label>
            </div>
            <div class="custom-control custom-checkbox">
                <input class="custom-control-input" type="checkbox" id="OptimizText">
                <label class="custom-control-label" for="OptimizText">Оптимизация текста</label>
            </div>
            <div class="custom-control custom-checkbox">
                <input class="custom-control-input" type="checkbox" id="OptimizTag">
                <label class="custom-control-label" for="OptimizTag">Оптимизация тэгов</label>
            </div>
            <br>
            <button type="button" class="btn btn-primary btn-lg btn-block" id="AddContract">Добавить договор</button>
            <br>
            <div class="dropdown" style="text-align: right;">
                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Экспорт
                </button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <a class="dropdown-item" href="#">Excel</a>
                    <a class="dropdown-item" href="#">HTML</a>
                </div>
            </div>
            <br>
            <table class="table table-bordered text-center" style="font-size:12px;">
                <tr style="background-color: rgba(156, 156, 156, 0.75); vertical-align:middle; text-align:center" class="align-middle">
                    <th rowspan="2">Название</th>
                    <th rowspan="2">Дата</th>
                    <th rowspan="2">Cайт</th>
                    <th rowspan="2">Компания</th>
                    <th rowspan="2">Выполняет</th>
                    <th rowspan="2">Google</th>
                    <th rowspan="2">Yandex</th>
                    <th colspan="3">Оптимизация</th>
                    <th rowspan="2">Изменить</th>
                    <th rowspan="2">Удалить</th>
                </tr>
                <tr style="background-color: rgba(156, 156, 156, 0.75)">
                    <td><b>Изображения</b></td>
                    <td><b>Текст</b></td>
                    <td><b>Тэги</b></td>
                </tr>
                @foreach (var item in (List<Contract>) ViewBag.Contracts)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Date</td>
                        <td><a href="https://@item.Url">@item.Url</a></td>
                        <td>@item.Company.Name</td>
                        <td>@item.Employee.FirstName @item.Employee.SecondName</td>
                        <td>@item.GooglePoz</td>
                        <td>@item.YandexPoz</td>
                        <td>
                            @(@item.OptimImg == true ? "Да" : "Нет")
                        </td>
                        <td>
                            @(@item.OptimText == true ? "Да" : "Нет")
                        </td>
                        <td>
                            @(@item.OptimTag == true ? "Да" : "Нет")
                        </td>
                        <td><button type="button" class="btn btn-primary" onclick="GetContractById(@item.Id)">Изменить</button></td>
                        <td><button type="button" class="btn btn-secondary" onclick="DeleteContract(@item.Id)">Удалить</button></td>
                    </tr>
                }
            </table>
        </div>
