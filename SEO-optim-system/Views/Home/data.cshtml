<script>
        // Table Companies
    $("#AddCompany").on("click", function (evt) {
        var data = new FormData();
        data.append("Name", $("#InputCompanyName").val());
        data.append("Country", $("#InputCompanyCountry").val());
        data.append("City", $("#InputCompanyCity").val());
        data.append("LPR", $("#InputCompanyDirector").val());
        data.append("PhoneNumber", $("#InputCompanyPhone").val());
        $.ajax({
            type: "POST",
            url: "@Url.Action("AddCompany")",
            contentType: false,
            processData: false,
            data: data,
            success: function (data) {
                toastr["success"]("Запись добавлена в БД");
                setTimeout(location.reload(), 3000);
            },
            error: function (request) {
                toastr["error"](request)
            },
        });
     });

    function DeleteCompany(id){
        $.ajax({
            type: "Get",
            url: "/home/DeleteCompany?Id=" + id,
            success: function (data) {
                toastr["success"]("Удалено из БД");
                setTimeout(location.reload(), 3000);
            },
            error: function (request) {
                toastr["error"](request)
            },
        })
    };

    function GetCompanyById(id) {
        $("#CompaniesModal").modal("show");
        var data = new FormData();
        data.append("Id", id);
        $.ajax({
            type: "POST",
            url: "@Url.Action("GetCompanyById")",
            contentType: false,
            processData: false,
            data: data,
            success: function (data) {
                $("#Name").text(data.name);
                $("#CompanyId").val(data.id);
                $("#EditCompanyName").val(data.name);
                $("#EditCompanyCountry").val(data.country);
                $("#EditCompanyCity").val(data.city);
                $("#EditCompanyLPR").val(data.lpr);
                $("#EditCompanyPhone").val(data.phoneNumber);
            },
            error: function (request) {
                toastr["error"](request.message)
            },
        })
    };

    function UpdateCompanyModal() {
        var data = new FormData();
        data.append("Id",  $("#CompanyId").val());
        data.append("Name", $("#EditCompanyName").val());
        data.append("Country", $("#EditCompanyCountry").val());
        data.append("City", $("#EditCompanyCity").val());
        data.append("LPR", $("#EditCompanyLPR").val());
        data.append("PhoneNumber", $("#EditCompanyPhone").val());
        $.ajax({
            type: "POST",
            url: "@Url.Action("UpdateCompany")",
            contentType: false,
            processData: false,
            data: data,
            success: function (data) {
                toastr["success"]("Запись изменена");
                $("#CompaniesModal").modal("hide");
                setTimeout(location.reload(), 3000);
            },
            error: function (request) {
                toastr["error"](request.message)
            },
        })
    };

    // Table Employees
    $("#AddEmployee").on("click", function (evt) {
        var data = new FormData();
        data.append("FirstName", $("#InputEmployeeFirstName").val());
        data.append("Patronymic", $("#InputEmployeePatronymic").val());
        data.append("SecondName", $("#InputEmployeeSecondName").val());
        data.append("Birthday", $("#InputEmployeeBirthday").val());
        data.append("Position", $("#InputEmployeePosition").val());
        data.append("Department", $("#InputEmployeeDepartment").val());
        data.append("PhoneNumber", $("#InputEmployeePhone").val());
