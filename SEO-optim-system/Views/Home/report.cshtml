@{
    ViewData["Title"] = "Отчёты";
    ViewData["Description"] = "Страница для создания отчётов о проделанной работе";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Создать отчёт</h1>
</div>
<div class="container">
    <form>
        <div class="form-group">
            <label for="ContractSelect">Выберите контракт</label>
            <select class="form-control" id="ContractSelect">
                <option>1</option>
            </select>
        </div>
        <div class="form-group">
            <label for="InputDate">Дата создания отчёта</label>
            <input type="date" class="form-control" id="InputDate" placeholder="Дата">
        </div>
        <div class="form-group">
            <label for="EmployeeSelect">Выберите рабочего</label>
            <select class="form-control" id="EmployeeSelect">
                <option>1</option>
            </select>
        </div>
        <div class="mb-3">
            <label for="Textarea">Выполненые мероприятия</label>
            <textarea class="form-control" id="Textarea"></textarea>
        </div>
        <button type="button" class="btn btn-primary btn-lg btn-block pb-3">Создать отчёт</button>
    </form>
</div>
